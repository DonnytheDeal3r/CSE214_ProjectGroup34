public class Shooter extends DefaultCritter {

    private static  double x0 = 400;
    private static  double y0 = 100;
    private static  int Orien = 90;
    
    public Shooter() {
        super(x0, y0);
    }

    @Override
    public void update() {
        super.update();
    }

    @Override
    public void draw() {
        int radius = 10;
        StdDraw.setPenColor(StdDraw.BLUE);
        StdDraw.filledCircle(x, y, radius);
    }
    public void changeOr(int Rot){
      if( (Orien<=0) && (Rot>=0) ){
       Orien=0; 
       Orien = Orien + Rot;
      }else if( (Orien>=180) && (Rot<=0) ){
       Orien=180; 
       Orien = Orien + Rot;  
      }else if((Orien>0) && (Orien<180)){
        Orien = Orien + Rot;
        }
      }
    public double returnX0(){
     return x0;
    }
    public double returnY0(){
     return y0;
    }
    public int returnOr(){
     return Orien;
    }
}